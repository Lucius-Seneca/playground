{
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, IndentWidth: 2, ColumnLimit: 100, PointerAlignment: Left}",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.includePath": ["/Users/mathiasschickel/Workspace/eigen", "/Users/mathiasschickel/Workspace/**"],
    "C_Cpp.default.intelliSenseMode": "clang-arm64",
    "C_Cpp.enhancedColorization": "enabled",
    "C_Cpp.inlayHints.parameterNames.enabled": false,
    "C_Cpp.inlayHints.referenceOperator.enabled": true,
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.intelliSenseEngineFallback": "enabled",
    "cSpell.userWords": ["Eigen"],
    "[cpp]": {
        "editor.wordBasedSuggestions": "off",
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true,
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    },
    "clangd.path": "clangd",
    "clangd.arguments": [
        "--enable-config",
        "--header-insertion=iwyu",
        "--clang-tidy",
        "--background-index=1",
        "--compile-commands-dir=${workspaceFolder}/",
        "--query-driver=**"
    ],
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    "editor.formatOnSave": true,
    "editor.lineHeight": 1.6,
    "editor.tabSize": 2,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.semanticHighlighting.enabled": true,
    "editor.smoothScrolling": true,
    "editor.stickyTabStops": true,
    "window.autoDetectColorScheme": true,
    "workbench.editor.pinnedTabsOnSeparateRow": true,
    "workbench.list.smoothScrolling": true,
    "workbench.preferredDarkColorTheme": "Default Dark Modern",
    "workbench.preferredLightColorTheme": "Default Light Modern",
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.smoothScrolling": true,
}
